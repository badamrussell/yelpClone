
<form class="sign-in" action="<%= session_url %>" method="post" accept-charset="utf-8">

  <h3 class="red-title">Log in to YelpClone</h3>

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div class="form-text-input">
    <label class="med-title" for="user_email">Email</label>
    <input size="40" type="text" name="user[email]" value="" id="user_email">
  </div>
  <div class="form-text-input">
    <label class="med-title" for="user_password">Password</label>
    <input size="40" type="password" name="user[password]" value="" id="user_password">
  </div>

  <div><button class="red-btn" type="submit">Log in</button></div>
</form>