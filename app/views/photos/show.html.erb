<h3><a href="<%= business_url(@business.id) %>"><%= @business.name %>:</a> Photos</h3>

<nav class="photo-nav">
  <button>Prev</button>
  <span><strong><%= @select_id+1 %></strong> of <strong><%= @photos.length %></strong></span>
  <button>Next</button>
</nav>

<% photo = @photos[@select_id] || Photo.new %>
<h1><%= photo %></h1>
<section class="photo-show-container group">

  <% if photo %>
    <section class="content-photo">
      <img src="<%= photo.img_url %>">
    </section>

    <section class="sidebar-photo-info group">
      <%= render "users/passport", photo: photo, user: photo.user %>
      <p><strong><%= photo.caption %></strong></p>

      <% if current_user.photo_details_for(photo) %>
        <%= render "photo_details/form", url: photo_details_url(photo.id), method: "put", photo_details: [] %>
      <% else %>
        <%= render "photo_details/form", url: photo_details_url(photo.id), method: "post", photo_details: nil %>
      <% end %>


      <div>
        <p>Additional Info</p>
        <em>Uploaded <strong><%= photo.created_at.strftime("%B %d,%Y") %></strong></em>
      </div>

    </section>


  <% end %>
</section>