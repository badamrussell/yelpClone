
<div class="image-w-third">
  <a href="<%= business_photos_url(photo.business_id, photo_id: photo.id) %>">
    <img width="<%= width %>" src="<%= photo.url %>">
  </a>

  <div class="lower-third">
    <a class="icon-photo left" href="<%= user_url(photo.user_id) %>"><img width="25" src="<%= photo.user.avatar %>"></a>
    <a class="white-title" href="<%= business_url(photo.business_id) %>"><%= photo.title %></a>
    <a class="tiny-font" href="<%= user_url(photo.user_id) %>">by <%= photo.user.name  %></a>
  </div>
</div>