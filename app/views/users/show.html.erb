<header>
  <nav class="user-detail-container">
    <ul class="user-detail-nav group">
      <li><div><a href="#">Profile Home</a></div></li>
      <li><div><a href="#">Lists</a></div></li>
      <li><div><a href="#">Reviews</a></div></li>
      <li><div><a href="#">Tips</a></div></li>
      <li><div><a href="#">Compliments</a></div></li>
      <li><div><a href="#">Friends</a></div></li>
      <li><div><a href="#">Bookmarks</a></div></li>
      <li><div><a href="#">Events</a></div></li>
    </ul>
  </nav>
  <section class="user-detail-title-container">
    <h3 class="red-title"><%= @user.name %>'s Profile</h3>
    <% if @user == current_user %>
    <a href="<%= edit_user_url(@user.id) %>">edit</a>
    <% end %>
  </section>
</header>


<section class="user-main-body group">
  <%= render "users/user_info", user: @user %>

  <section class="mid-content">
    <header class="">
      <h3 class="red-title">Recent Reviews</h3>
      <hr>
    </header>
    <% @user.reviews.each do |review| %>
      <%= render "reviews/user_detail", review: review %>
    <% end %>
  </section>

  <section class="sidebar-right">
    RIGHT-SIDE CONTENT
  </section>

</section>


<%= render "scripts/vote" %>
<%= render "popups/compliments",
          url: review_compliments_url,
          review: Review.new,
          compliment: ReviewCompliment.new,
          method: "post" %>