
<section class="main-content group">

<%= render "users/header_nav", user: @user %>


<section class="user-main-body group">
  <%= render "users/user_info", user: @user %>

  <section class="mid-content">
    <header class="">
      <h3 class="red-title">Recent Reviews</h3>
    </header>
    <% @user.reviews.each do |review| %>
      <%= render "reviews/user_detail", review: review %>
    <% end %>
  </section>

  <section class="sidebar-right">
    <%= render "users/friends", friends: @user.friends %>

    <%= render "users/compliments", compliments: @user.review_compliments %>

    <%= render "users/lists", lists: @user.lists %>

  </section>
</section>

</section>

<%= render "scripts/vote" %>
<%= render "popups/compliments",
          url: review_compliments_url,
          review: Review.new,
          compliment: ReviewCompliment.new,
          method: "post" %>