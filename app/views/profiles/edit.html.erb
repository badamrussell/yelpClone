<form action="<%= profile_url %>" method="post">
  <input type="hidden" name="_method" value="put">

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <img href="#" src="<%= avatar_img %>" height="100">
  <br>
  <label for="profile_img_url">Profile Image</label>
  <br>
  <input type="text" name="user[img_url]" value="<%= current_user.img_url %>" id="profile_img_url %>">


  <br>
  <%= render "dev/attributes", obj: @profile, is_form: true, prefix: "profile" %>


  <input type="submit" name="submit" value="Save Changes" id="Save Changes">
</form>