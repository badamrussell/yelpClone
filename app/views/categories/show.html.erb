
<section class="main-content">

<h1 class="red-title">Best <%= @category.name %> in New York</h1>

<section class="category-mosaic group">
  <% sizes = [[500,300], [140,300], [300,140], [140,140], [140,140]] %>
  <% @category.best_businesses(5).each_with_index do |business,index| %>
  <div class="mosaic-photo group">
      <% size = sizes.shift %>
      <%= render "widgets/photo_shape",{
        url: business_url(business.id),
        width: size[0],
        height: size[1],
        source: business.avatar
      } %>
    <% end %>
  </div>

  <a href="<%= search_url(category_id: @category.id) %>">More <%= @category.name %></a>
</section>

<section class="category-search-filters group">
  <div class="side-neighborhoods left">
    <h1 class="filter-title red-title">Neighborhoods</h1>

    <%= render "widgets/columns", columns: 2,
                                  data: Neighborhood.where(area_id: 1),
                                  max_rows: 8,
                                  base_url: "#{search_url(category_id: @category.id)}&",
                                  param_name: "neighborhood_id" %>
  </div>

  <div class="side-features left">
    <div class="filter-prices group">
      <h1 class="filter-title red-title">Prices</h1>
      <%= render "widgets/columns", columns: 2, data: PriceRange.all, base_url: "#{search_url}", param_name: "" %>
    </div>

    <div class="filter-features">
      <h1 class="filter-title red-title">Features</h1>
      <%= render "widgets/columns", columns: 2, data: Feature.all, max_rows: 4, base_url: "#{search_url}", param_name: ""  %>
    </div>

  </div>

</section>

<section class="group">
  <section class="category-reviews left">
    <h1 class="filter-title red-title">Fresh <%= @category.name %> Reviews</h1>

    <% reviews = @category.new_reviews(4) %>
    <ul class="review-block left">
    <% reviews[0...2].each do |review| %>
      <li><%= render "reviews/quick", review: review , title: "?????", body: review.body %></li>
    <% end %>
    </ul>
    <ul class="review-block left">
    <% reviews[2...4].each do |review| %>
      <li><%= render "reviews/quick", review: review , title: "?????", body: review.body %></li>
    <% end %>
    </ul>
  </section>

  <section class="category-photos left">
    <h1 class="filter-title red-title">Recent Photos</h1>

    <ul class="photo-block group">
    <% @category.new_photos(8).each do |photo| %>
      <li class="photo-icons left"><a href="<%= business_photos_url(photo.business_id, photo: photo) %>"><img width="70" src="<%= photo.url %>"></a></li>
    <% end %>
    </ul>

  </section>
</section>

<section class="category-new-business group">
  <h3 class="filter-title">New <%= @category.name %> in NEW YORK</h3>


  <ul class="new-business-block group">
  <% @category.new_businesses(5).each do |biz| %>
    <li class="biz-storefronts left"><%= render "businesses/store_front_photo", business: biz %></li>
  <% end %>
  </ul>
  <div>
    <a href="#">More New Business Openings</a>
  </div>
</section>
</section>