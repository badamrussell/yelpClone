<%= render "users/header_nav", user: @user %>


<section class="user-main-body group">
  <%= render "users/user_info", user: @user %>

  <section class="mid-content">
    <header class="">
      <h3 class="red-title"><%= @user.name %>'s Compliments</h3>
      <hr>
    </header>

    <ul>
      <% @user.review_compliments.each do |c| %>
        <li class="compliment-quick group">
          <header>
            <span>
              <img class="compliment-20 <%= Compliment.find(c.compliment_id).name %> left">
              <p class="compliment-name"><%= Compliment.find(c.compliment_id).name %></p>
            </span>
          </header>

          <div class="side-left left">
            <%= render "users/avatar", user: c.user %>

          </div>

          <div class="side-right">
            <p>For <%= c.review.user.name %>'s review of: <a href="<%= business_url(c.review.business.id) %>"><%= c.review.business.name %></a></p>

            <p class="compliment-body"><%= text_snippet(c.body, 40) %></p>
          </div>
        </li>
      <% end %>
    </ul>
  </section>

  <section class="sidebar-right">


  </section>

</section>